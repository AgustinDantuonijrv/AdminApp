<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="2"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/userimage"
            android:layout_width="99dp"
            android:layout_height="104dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dni"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faixa"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/afiliado"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nacimiento"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="@string/profesor" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="99dp"
            android:layout_height="54dp"
            android:layout_marginLeft="50dp"
            android:text="Celular" />

        <TextView
            android:id="@+id/wappnumbershow"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="WappNumber"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/textonombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nombre"/>

        <TextView
            android:id="@+id/textoemail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email"/>
        <TextView
            android:id="@+id/textodni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dni"/>
        <TextView
            android:id="@+id/faixa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faixa"/>

        <TextView
            android:id="@+id/afiliado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/afiliado"/>
        <TextView
            android:id="@+id/textonacimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nacimiento"/>

        <TextView
            android:id="@+id/profesor"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:text="@string/profesor" />

</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </LinearLayout>
</LinearLayout>